<!DOCTYPE html>
<html ng-app ng-controller="PhoneListController">
    <head>
      <meta charset="utf-8">
      <title ng-bind-template="Google Phone Gallery: {{query}}"></title>
      <%= stylesheet_link_tag 'app' %>
      <%= stylesheet_link_tag 'bootstrap' %>
      <%= javascript_include_tag 'libraries/angular.js' %>
      <%= javascript_include_tag 'controllers/phoneListController.js' %>
    </head>
    <body>
      Sort:
      <select ng-model="orderProp">
        <option value="name">Alphabetical</option>
        <option value="age">Newest</option>
      </select>
      Search: <input type="text" ng-model="query">
        <ul class="phones">
            <li ng-repeat="phone in phones | filter:query | orderBy:orderProp">
                {{phone.name}}
                <p>{{phone.snippet}}</p>
            </li>
        </ul>
        <div id="status">Current filter: {{query}}</div>
        <div>Current sorter: {{orderProp}}</div>
    </body>
</html>